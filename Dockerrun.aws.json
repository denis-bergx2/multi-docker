{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "rybalka/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "rybalka/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "rybalka/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "rybalka/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [{
        "containerPort": 80,
        "hostPort": 80
      }],
      "links": ["client", "server"]
    }
  ]
}
